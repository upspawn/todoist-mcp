{
  "name": "@upspawn/todoist-mcp",
  "version": "0.2.0",
  "description": "Model Context Protocol server for Todoist integration",
  "main": "dist/index.js",
  "bin": {
    "todoist-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest --config=jest.integration.config.js tests/integration/todoist-api-real.test.ts --detectOpenHandles --forceExit",
    "test:all": "jest --config=jest.integration.config.js",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write src/",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "todoist",
    "ai",
    "assistant",
    "productivity",
    "tasks"
  ],
  "author": "upspawn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/upspawn/todoist-mcp.git"
  },
  "files": [
    "dist/",
    "README.md",
    "package.json"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "axios": "^1.7.7",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^30.0.5",
    "jiti": "^2.5.1",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.2",
    "ts-jest": "^29.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
